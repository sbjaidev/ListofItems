<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/event_card_view"
    android:layout_width="match_parent"
    android:layout_height="200dp"
    card_view:cardCornerRadius="4dp"
    android:layout_margin="5dp">

    <LinearLayout
        android:id="@+id/card_ll_container"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:minHeight="88dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">
            <LinearLayout
                android:id="@+id/event_card_text_container"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/event_card_title"
                    style="@style/eventCardTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0"
                    tools:text="Birthday Party"/>
                <TextView
                    android:id="@+id/event_card_start_date"
                    style="@style/cardPrimaryText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0"
                    tools:text="Nov 12 2016"/>
                <TextView
                    android:id="@+id/event_card_description"
                    style="@style/cardSecondaryText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    tools:text="My 30th birthday party."/>
            </LinearLayout>
            <ImageView
                android:id="@+id/event_card_image"
                android:scaleType="centerCrop"
                android:layout_width="88dp"
                android:layout_height="88dp"
                android:contentDescription="@string/app_name"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <Button
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="action 1" />
            <Button
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="action 2"
                style="@style/cardButton"/>
        </LinearLayout>
    </LinearLayout>

</android.support.v7.widget.CardView>