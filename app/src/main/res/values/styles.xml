<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="android:Theme.Material.Light.DarkActionBar">
        <!-- Customize your theme here. -->

        <!-- Main theme colors -->
        <!-- App branding color - red -->
        <item name="android:colorPrimary">@color/colorPrimary</item>
        <!-- Darker variant for the status bar and contextual app bars -->
        <item name="android:colorPrimaryDark">@color/colorPrimaryDark</item>
        <!-- theme UI controls like checkboxes and text fields -->
        <item name="android:colorAccent">@color/colorAccent</item>
    </style>

    <!-- Styling of Card Title -->
    <style name="eventCardTitle">
        <item name="android:fontFamily">roboto_medium</item>
        <item name="android:color">@android:color/black</item>
        <item name="android:textSize">20sp</item>
        <item name="android:layout_gravity">right</item>
    </style>

    <style name="cardPrimaryText">
        <item name="android:fontFamily">roboto_regular</item>
        <item name="android:textStyle">italic</item>
        <item name="android:color">@android:color/primary_text_dark</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="cardSecondaryText">
        <item name="android:fontFamily">Roboto</item>
        <item name="android:color">@android:color/primary_text_light</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="cardButton">
        <item name="android:fontFamily">roboto_medium</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textSize">14sp</item>
        <item name="android:color">@android:color/holo_blue_dark</item>
        <item name="android:backgroundTint">@color/cardview_light_background</item>
    </style>

</resources>
